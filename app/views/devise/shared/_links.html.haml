%ul.auth_menu
  - if controller_name != 'sessions'
    %li.access= link_to "Acceder", new_session_path(resource_name)

  - if devise_mapping.registerable? && controller_name != 'registrations'
    %li.account= link_to "Crear cuenta de usuario", new_registration_path(resource_name)


  - if devise_mapping.recoverable? && controller_name != 'passwords'
    %li.forget= link_to "No recuerdo mi contrase√±a", new_password_path(resource_name)


  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    %li.confirmation= link_to "No he recibido las instrucciones para confirmar mi cuenta", new_confirmation_path(resource_name)

  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    %li.unlock= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name)

