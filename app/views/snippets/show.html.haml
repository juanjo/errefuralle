%h1= @snippet.description
%h2= @snippet.user.email

#highlight_code
  - cache do
    = highlight_code(:r, @snippet.code).html_safe

%p
  - if can? :update, @snippet
    = link_to 'Edit | ', edit_snippet_path(@snippet)
  - if can? :destroy, @snippet
    = link_to 'Destroy | ', @snippet, :method => :delete, :confirm => 'Are you sure?'
  = link_to 'Back to Snippets', snippets_url